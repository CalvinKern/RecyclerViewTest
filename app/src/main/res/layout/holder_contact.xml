<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/holder_contact_image_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/contact_image_size"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/holder_contact_name_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/contact_name_text_size"
        android:textColor="@color/white"
        android:background="@drawable/black_bottom_gradient"
        />

</RelativeLayout>